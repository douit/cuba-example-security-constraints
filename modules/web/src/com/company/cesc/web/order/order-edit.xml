<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.cesc.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cesc.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.company.cesc.entity.Order"
                    view="order-view">
            <collectionDatasource id="lineItemsDs"
                                  property="lineItems"/>
        </datasource>
        <collectionDatasource id="customersDs"
                              class="com.company.cesc.entity.Customer"
                              view="_local">
            <query>
                <![CDATA[select e from cesc$Customer e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="ordersTableDs"
                         class="com.company.cesc.entity.Order"
                         view="order-view">
            <query>
                <![CDATA[select e from cesc$Order e where e.id = :ds$orderDs]]>
            </query>
        </collectionDatasource>
    </dsContext>

    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <table id="ordersTable"
                    multiselect="true"
                    width="100%" height="200px">
            <actions>
                <action id="deliverOrderAction"
                        caption="msg://deliverOrder"
                        trackSelection="true"
                        constraintOperationType="custom"
                        constraintCode="deliverOrder"
                        invoke="deliverOrder"/>
            </actions>
            <columns>
                <column id="id" />
            </columns>
            <rows datasource="ordersTableDs" />
        </table>

        <buttonsPanel id="buttonsPanel">
            <button id="deliverOrderBtn"
                    action="ordersTable.deliverOrderAction"
                    icon="font-icon:SEND"/>
        </buttonsPanel>
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field id="id"/>
                <field id="orderDate"/>
                <field id="status"/>
                <field id="customer"
                       optionsDatasource="customersDs"/>
                <field id="paymentMethod"/>
            </column>
        </fieldGroup>
        <groupBox id="lineItemsBox"
                  caption="msg://com.company.cesc.entity/Order.lineItems">
            <table id="lineItemsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="order"/>
                    <column id="position"/>
                    <column id="product"/>
                    <column id="unitPrice"/>
                    <column id="quantity"/>
                    <column id="totalPrice"/>
                    <column id="quantityUnit"/>
                </columns>
                <rows datasource="lineItemsDs"/>
                <buttonsPanel>
                    <button action="lineItemsTable.create"/>
                    <button action="lineItemsTable.edit"/>
                    <button action="lineItemsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
